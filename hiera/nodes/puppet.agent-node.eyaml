
---

classes:
  - 'logrotate'
  - 'packages'


packages::install:
  - 'jq'



logrotate::rotate_period: 'weekly'
logrotate::rotate: 4
logrotate::create: true
logrotate::config_dir: '/etc/logrotate.d'

logrotate::pools:
  nginx:
    log_dir:
      - '/var/log/nginx/*.log'
      - '/vhosts/multisite/logs/*.log'
      - '/vhosts/multisite/logs/nginx/*.log'
      - '/vhosts/multisite/logs/nginx/*/*.log'
    rotate_period: 'daily'
